#!/bin/bash -e

name=${1%%.*}

# If in tmux, do we already have a local window for this host?
#if [[ $TMUX ]] && tmux select-window -t $name
#then
#  exit 0
#fi

if [[ $TMUX ]]
then
  if [[ $TMUX_PANE ]]
  then
    tmux rename-window -t $TMUX_PANE $name
  else
    tmux rename-window $name
  fi
fi

xtb $1
ssh -A -t $1 bin/tat
xtb bash
